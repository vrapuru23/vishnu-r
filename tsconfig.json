{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "pages/index.js",
    "pages/_app.tsx",
    "sanity/schemas/portfolio.js",
    ".next/types/**/*.ts", 
    "src/app/studio/[[...index]]/page.js", 
    "pages/index.js", 
    "components/Header.js", 
    "components/subComponents/ReusableComponents/Logo.js", "components/NavComponents/Portfolio.js",  
],
  "exclude": [
    "node_modules"
  ]
}
